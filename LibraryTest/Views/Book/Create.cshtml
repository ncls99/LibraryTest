@model LibraryTest.Models.Book
<link rel="stylesheet" href="~/css/CreateBook.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Create";
}
<div class="Create-book-container">
    <h1>Create Book</h1>
    <div class="Form-container">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-input" />
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-input" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-submit" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn-submit">Back to List</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
