@model LibraryTest.Models.Author
<link rel="stylesheet" href="~/css/CreateAuthor.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Create";
}


<div class="Create-author-container">
<h1>Create Author</h1>
    <div class="Form-container">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-input" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-submit" />
            </div>
        </form>
    </div>
    <a class="btn-submit" asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
